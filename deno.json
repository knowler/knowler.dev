{
	"workspace": [
		"cms",
		"demos",
		"shared",
		"web"
	],
	"tasks": {
		"dev": "deno task --cwd=web dev",
		"demos": "deno run -A @knowler/demos",
		"publish-page": "deno run -A @knowler/cms/publish-page",
		"publish-post": "deno run -A @knowler/cms/publish-post",
