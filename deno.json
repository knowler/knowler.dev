{
	"workspace": [
		"cms",
		"demos",
		"shared",
		"web"
	],
	"tasks": {
		"dev": "deno run -A --unstable-kv --unstable-temporal @knowler/web ",
		"demos": "deno run -A @knowler/demos",
		"publish-page": "deno run -A @knowler/cms/publish-page",
		"publish-post": "deno run -A @knowler/cms/publish-post",
		"update-page": "deno run -A @knowler/cms/update-page",
		"update-post": "deno run -A @knowler/cms/update-post"
	},
	"nodeModulesDir": "auto",
	"fmt": {
		"useTabs": true
	},
	"imports": {
		"lightningcss": "npm:lightningcss@^1.30.2",
		"lightningcss-cli": "npm:lightningcss-cli@^1.30.2"
	}
}
