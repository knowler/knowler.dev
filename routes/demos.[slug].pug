extends /_layouts/base

include /_mixins/open-with-codepen

append head
	title #{demo.title ? demo.title : "Untitled"} – Demos – Nathan Knowler
	if demo.description
		meta(name="description" content=demo.description)
	style!= demo.css
	script(type="module")!= demo.js

block body
	if codepen
		+open-with-codepen
	| !{demo.html}
