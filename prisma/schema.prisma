datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Page {
  id          String       @id @default(cuid())
  slug        String       @unique
  title       String
  description String?
  html        String
  markdown    String
  published   Boolean      @default(false)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  publishedAt DateTime?
  webmentions Webmention[]
}

model Post {
  id          String       @id @default(cuid())
  slug        String
  title       String
  description String?
  markdown    String
  html        String
  published   Boolean      @default(false)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  publishedAt DateTime?
  webmentions Webmention[]
}

model GardenPost {
  id          String   @id @default(cuid())
  slug        String
  title       String
  description String?
  markdown    String
  html        String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model ContactFormSubmission {
  id        String   @id @default(cuid())
  name      String   @default("Anonymous")
  email     String
  subject   String
  message   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  isSpam    Boolean  @default(false)
}

model Webmention {
  id        String   @id @default(cuid())
  source    String
  target    String
	title			String?
	author		String?
  content   String?
  approved  Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Page      Page?    @relation(fields: [pageId], references: [id])
  Post      Post?    @relation(fields: [postId], references: [id])
  pageId    String?
  postId    String?
}
